<p id="notice"><%= notice %></p>

<h1>Usergroups</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Bespoke</th>
      <th>North</th>
      <th>South</th>
      <th>West</th>
      <th>East</th>
      <th>Draggable</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @usergroups.each do |usergroup| %>
      <tr>
        <td><%= usergroup.name %></td>
        <td><%= usergroup.bespoke %></td>
        <td><%= usergroup.north %></td>
        <td><%= usergroup.south %></td>
        <td><%= usergroup.west %></td>
        <td><%= usergroup.east %></td>
        <td><%= usergroup.draggable %></td>
        <td><%= link_to 'Show', usergroup %></td>
        <td><%= link_to 'Edit', edit_usergroup_path(usergroup) %></td>
        <td><%= link_to 'Destroy', usergroup, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

