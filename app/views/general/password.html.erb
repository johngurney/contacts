<table>
  <col width="20%">
  <col width="60%">
  <col width="20%">
  <tr>
    <td>
    </td>
    <td style="font-size: 30px">
      <%= form_tag  log_in_path, method: "post" do %>
      <table width=100% >
        <col width="40%">
        <col width="60%">
        <tr>
          <td style="font-size: 30px">
            Enter password
          </td>
          <td>
            <%= password_field_tag :password, "", {:autofocus => true, :autocomplete=> "new-password", :class =>"standard", :style => "width: 250px" } %>
          </td>
        </tr>

      </table>
      <%= submit_tag "Log in", :class =>"standard", :style =>"width: 160px; margin-top:20px; background: lightyellow;" %>
      <% end %>

    </td>
    <td>
    </td>
  </tr>
</table>
