<p id="notice"><%= notice %></p>

<h1>Sheets</h1>

<table>
  <thead>
    <tr>
      <th>Client name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sheets.each do |sheet| %>
      <tr>
        <td><%= sheet.client_name %></td>
        <td><% if !sheet.number.blank? %> <%= link_to 'Show', contact_sheet_path(:id => sheet.number) %><% end %></td>
        <td><%= link_to 'Edit', edit_sheet_path(sheet) %></td>
        <td><%= link_to 'Delete', sheet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

