<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.order(:last_name, :first_name).each do |contact| %>
      <tr>
        <td><%= contact.name %></td>

        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<style>
  .btn-file {
    position: relative;
    overflow: hidden;
}

.btn-file input[type="file"] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;

}



.container1 {
    display: inline-flex;
    flex-direction: row;
    }

.container1 div {
    padding: 5px;
    }


</style>

<div class="container1" style="margin-top:20px" >
  <%= button_to "Delete all", delete_all_contacts_path, class: "standard_button" %>

  <%= form_tag upload_contacts_file_path, :multipart => true do  %>
    <div style="border: 2px solid blue; border-radius: 25px; background: white; width: 630px; margin-left: 10px">
      <span class="small_user1" >
        <span style="font-size: 12pt; font-family: Arial; margin-left: 10px; margin-right: 10px">
          Upload file of users
        </span>
        <span class1="btn-file3">
          Choose file
          <%= file_field_tag :file %>
        </span>
      </span>
      <%= submit_tag "Upload",  {:class=>"small_button", :style =>"width: 80px; margin-left: 0px"} %>
    </div>
  <% end %>

  <br>

  <%= button_to 'New Contact', new_contact_path , class: "standard_button", style: "margin-left: 10px" %>
</div>
