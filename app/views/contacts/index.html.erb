<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %>(<%= contact.id.to_s %>)</td>

        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<style>
  .btn-file1 {
    position: relative;
    overflow: hidden;
}

.btn-file1 input[type=file] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;
}

</style>

<%= button_to "Delete all", delete_all_contacts_path %>

<%= form_tag upload_contacts_file_path, :multipart => true do  %>
  <span class="small_user" >
    <span style="font-size: 12pt; font-family: Arial; margin-right: 25px">
    Upload file of users
    </span>
    <span class="btn1 btn-large btn-warning btn-file">
      Choose file
      <%= file_field_tag :file %>
    </span>
  </span>
    <%= submit_tag "Upload",  {:class=>"standard_button", :style =>"width: 120px; margin-left: 10px"} %>
<% end %>

<br>

<%= button_to 'New Contact', new_contact_path , class: "standard_button" %>
