<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>

        <td><%= link_to 'Show', contact %></td>
        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= button_to "Delete all", delete_all_contacts_path %>

<%= form_tag upload_contacts_file_path, :multipart => true do  %>
  <span class="small_user" >
    <span style="font-size: 12pt; font-family: Arial; margin-right: 25px">
    Upload file of users
    </span>
    <%= file_field_tag :file , :style =>"width: 300px; font-size: 12pt;"%>
  </span>
    <%= submit_tag "Upload",  {:class=>"large_button", :style =>"width: 120px; margin-left: 10px"} %>
<% end %>

<br>

<%= link_to 'New Contact', new_contact_path %>
