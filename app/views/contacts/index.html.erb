<p id="notice"><%= notice %></p>

<h1>Contacts</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.order(:last_name, :first_name).each do |contact| %>
      <tr>
        <td><%= contact.name %></td>

        <td><%= link_to 'Edit', edit_contact_path(contact) %></td>
        <td><%= link_to 'Delete', contact, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<style>
  .btn-file {
    position: relative;
    overflow: hidden;
}

.btn-file input[type="file"] {
    position: absolute;
    top: 0;
    right: 0;
    min-width: 100%;
    min-height: 100%;
    font-size: 100px;
    text-align: right;
    filter: alpha(opacity=0);
    opacity: 0;
    outline: none;
    background: white;
    cursor: inherit;
    display: block;

}



.container1 {
    display: inline-flex;
    flex-direction: row;
    }


</style>

<div class="container1" style="margin-top:20px" >
  <%= button_to "Delete all", delete_all_contacts_path, class: "standard_button" %>

  <div style="margin-left:10px" >
    <%= form_tag upload_contacts_file_path, :multipart => true do  %>
      <%= render "file_tag", title: "Upload file", name: "users", tag: :file, class_name: "standard_button", height: 60, file_type: ".txt" %>
    <% end %>
</div>

  <%= button_to 'New Contact', new_contact_path , method: :get, class: "standard_button", style: "margin-left: 10px" %>
</div>
